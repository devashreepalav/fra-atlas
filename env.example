# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Database (Railway will provide DATABASE_URL automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# GeoServer Configuration
GEOSERVER_URL=https://your-geoserver-domain.com/geoserver

# Optional: GDAL/GEOS/PROJ paths (only needed for local development)
GDAL_LIBRARY_PATH=/opt/homebrew/opt/gdal/lib/libgdal.dylib
GEOS_LIBRARY_PATH=/opt/homebrew/opt/geos/lib/libgeos_c.dylib
PROJ_LIBRARY_PATH=/opt/homebrew/opt/proj/lib/libproj.dylib

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Security (optional)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
